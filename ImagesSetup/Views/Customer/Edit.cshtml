@model Customer

<h2>Create Customer</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="form-group mt-2">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />

    </div>

    <div class="form-group mt-2">
        <label asp-for="Address" class="control-label"></label>
        <input asp-for="Address" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <label>Upload Customer Image</label>
        <input type="file" name="ImageFile" class="form-control" id="featuredImageUpload" />
    </div>

    <div class="form-group mt-2">
        <label asp-for="CustomerUrl" class="control-label"></label>
        <input asp-for="CustomerUrl" class="form-control" id="featuredImageUrl" />
        <span asp-validation-for="CustomerUrl" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-primary mt-4">Submit</button>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
